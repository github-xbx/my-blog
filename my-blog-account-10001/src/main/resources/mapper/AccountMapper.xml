<mapper namespace="com.xingbingxuan.blog.account.mapper.AccountMapper">
    <insert id="insertAccount" parameterType="UserEntity" useGeneratedKeys="true" keyProperty="id">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            username,
            password,
            nickname,
            header,
            <if test="mobile != null and mobile != '' ">
                mobile,
            </if>
            <if test="email != null and email != '' ">
                email,
            </if>
            <if test="sex != null and sex != '' ">
                sex,
            </if>
            <if test="sign != null and sign != '' ">
                sign,
            </if>
            <if test="integration != null and integration != '' ">
                integration,
            </if>
            <if test="growth != null and growth != '' ">
                growth,
            </if>
            <if test="status != null and status != '' ">
                status,
            </if>
            <if test="socialType != null and socialType != '' ">
                social_type ,
            </if>
            <if test="socialUid != null and socialUid != '' ">
                social_uid,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            #{username},
            #{password},
            #{nickname},
            #{header},
            <if test="mobile != null and mobile != '' ">
                #{mobile},
            </if>
            <if test="email != null and email != '' ">
                #{email},
            </if>
            <if test="sex != null and sex != '' ">
                #{sex},
            </if>
            <if test="sign != null and sign != '' ">
                #{sign},
            </if>
            <if test="integration != null and integration != '' ">
                #{integration},
            </if>
            <if test="growth != null and growth != '' ">
                #{growth},
            </if>
            <if test="status != null and status != '' ">
                #{status},
            </if>
            <if test="socialType != null and socialType != '' ">
                #{socialType} ,
            </if>
            <if test="socialUid != null and socialUid != '' ">
                #{socialUid},
            </if>
            #{createTime},
        </trim>
    </insert>
    <insert id="insertByUsernameUpdate" parameterType="com.xingbingxuan.blog.account.entity.UserEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `user`(username,password,header,social_type,social_uid,create_time,last_login_time)
        VALUES (#{username},#{password},#{header},#{socialType},#{socialUid},#{createTime},#{lastLoginTime})
        ON DUPLICATE KEY UPDATE last_login_time = #{lastLoginTime} ,integration = integration + 1

    </insert>
    <update id="updateUserById" parameterType="UserEntity">
        UPDATE `user` set
        <trim prefix=" " suffix=" " suffixOverrides=",">
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                 password = #{password},
            </if>
            <if test="nickname != null and nickname != ''">
                 nickname = #{nickname},
            </if>
            <if test="mobile != null and mobile != '' ">
                 mobile = #{mobile},
            </if>
            <if test="email != null and email != '' ">
                 email = #{email},
            </if>
            <if test="header != null and header != '' ">
                 header = #{header},
            </if>
            <if test="sex != null and sex != '' ">
                 sex = #{sex},
            </if>
            <if test="sign != null and sign != '' ">
                 sign = #{sign},
            </if>
            <if test="integration != null and integration != '' ">
                integration = #{integration},
            </if>
            <if test="growth != null and growth != '' ">
                 growth = #{growth},
            </if>
            <if test="status != null and status != '' ">
                 status = #{status},
            </if>
            <if test="socialType != null and socialType != '' ">
                 social_type = #{socialType},
            </if>
            <if test="socialUid != null and socialUid != '' ">
                 social_uid = #{socialUid},
            </if>
            <if test="createTime != null  ">
                 create_time = #{createTime},
            </if>
            <if test="lastLoginTime != null  ">
                 last_login_time = #{lastLoginTime}
            </if>
        </trim>
        WHERE id = #{id}
    </update>

    <select id="selectOneAnd" parameterType="UserEntity" resultType="UserEntity">
        select id,username,nickname,mobile,email,header,sex,sign,integration,growth,status,social_type,social_uid,create_time,last_login_time
        from  user
        WHERE 1=1
        <if test="id != null and id != '' ">
            and id = #{id}
        </if>
        <if test="username != null and username != ''">
            and username = #{username}
        </if>
        <if test="password != null and password != ''">
            and password = #{password}
        </if>
        <if test="nickname != null and nickname != ''">
            and nickname = #{nickname}
        </if>
        <if test="mobile != null and mobile != '' ">
            and mobile = #{mobile}
        </if>
        <if test="email != null and email != '' ">
            and email = #{email}
        </if>
        <if test="header != null and header != '' ">
            and header = #{header}
        </if>
        <if test="sex != null and sex != '' ">
            and sex = #{sex}
        </if>
        <if test="sign != null and sign != '' ">
            and sign = #{sign}
        </if>
        <if test="integration != null and integration != '' ">
            and integration = #{integration}
        </if>
        <if test="growth != null and growth != '' ">
            and growth = #{growth}
        </if>
        <if test="status != null and status != '' ">
